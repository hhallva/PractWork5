<UserControl x:Class="UsersControlElemets.ProductCounter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UsersControlElemets"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="150">
    <WrapPanel>
        <Button x:Name="MinusButton" Content="-" FontSize="30" Height="50" Width="50" Click="MinusButton_Click"/>
        <TextBox x:Name="DigitTextBox" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Height="50" Width="50" FontSize="20"/>
        <Button x:Name="PlusButton" Content="+"  FontSize="30" Height="50" Width="50" Click="PlusButton_Click"/>
    </WrapPanel>
</UserControl>
